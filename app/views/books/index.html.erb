<p id="notice"><%= notice %></p>
<h1>Biblioteca</h1>
<%= link_to 'Nuevo libro', new_book_path %>
<br>
<table>
    <thead>
        <tr>
            <th>Titulo</th>
            <th>Autor</th>
            <th>Estado</th>
            <th>Fecha de Préstamo</th>
            <th>Fecha de Devolución</th>
            <th colspan="3"></th>
        </tr>
    </thead>
    <tbody>
        <% @books.each do |book| %>
        <tr>
            <td><%= book.title %></td>
            <td><%= book.author %></td>
            <td><%= book.status %></td>
            <td><%= book.lendend_at %></td>
            <td><%= book.returned_at %></td>
            <td><%= link_to 'Ver', post %></td>
            <td><%= link_to 'Editar', edit_book_path(book) %></td>
            <td><%= link_to 'Eliminar', book, method: :delete, data: { confirm:'¿Esta seguro que desea eliminar?' } %></td>
        </tr>
        <% end %>
    </tbody>
</table>
