<h1>Libro <%=@book.id %> </h1>
<table class="table table-striped">
    
    <div class="row">
        <div class="col -md-3">
             <tr>
                <th scope="col">Titulo</th>
                <th scope="col">Autor</th>
                <th scope="col">Estado</th>
                <th scope="col">Fecha de Préstamo</th>
                <th scope="col">Fecha de Devolución</th>
            </tr>
                <tr>
                    <td><%= @book.title %></td>
                    <td><%= @book.author %></td>
                    <td><%= @book.status %></td>
                    <td><%= distance_of_time_in_words(Time.now, @book.lendend_at) %></td>
                    <td><%= distance_of_time_in_words(Time.now, @book.returned_at) %></td>
                </tr>
        </div>
    </div>
</table>
<%= link_to 'Editar', edit_book_path(@book) %> |
<%= link_to 'Volver', books_path %>